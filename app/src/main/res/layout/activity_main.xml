<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ymc.kotlindemo.MainActivity">

    <com.ymc.kotlindemo.RoundImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Hello World!"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:border_color="#ff9900"
        app:border_width="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:left_bottom_radiusX="40dp"
        app:left_bottom_radiusY="10dp"
        app:left_top_radiusX="40dp"
        app:left_top_radiusY="40dp"
        app:right_bottom_radiusX="40dp"
        app:right_bottom_radiusY="10dp"
        app:right_top_radiusX="40dp"
        app:right_top_radiusY="40dp"
        app:shape_type="SHAPE_ROUND"
        app:show_border="false"/>

</android.support.constraint.ConstraintLayout>
